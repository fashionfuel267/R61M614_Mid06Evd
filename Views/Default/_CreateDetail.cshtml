@model R61M614_Mid06Evd.Models.Category

@using (Ajax.BeginForm("Create", "Default", new AjaxOptions { HttpMethod = "post", InsertionMode = InsertionMode.Replace, UpdateTargetId = "formDiv", OnSuccess = "onSuccess" }, new { enctype = "multipart/form-data" }))
{
    <h2>Create new product</h2>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.Name, new { @class = "col-form-label col-2" })
        <div class="col-4">

            @Html.EditorFor(m => m.Name, new { @class = "form-conrol" })
            @Html.ValidationMessageFor(m => m.Name, "Provide name", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.EntryDate, new { @class = "col-form-label col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.EntryDate, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.EntryDate, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.IsContinued, new { @class = "col-form-label col-2" })
        <div class="col-4">
            @Html.EditorFor(x => x.IsContinued, new { @class = "form-control", type = "date" })
            @Html.ValidationMessageFor(x => x.IsContinued, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group row mb-1">
        @Html.LabelFor(x => x.Picture, new { @class = "col-form-label col-2" })
        <div class="col-4">
            @Html.TextBoxFor(x => x.Picture, new { @class = "form-control", type = "file" })
            @Html.ValidationMessageFor(x => x.Picture, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="col-6 mb-1" style="display:flex;">

        <h4>Product</h4>
        <span style="flex: 1 1 auto"></span>
        <button formnovalidate class="btn btn-secondary btn-sm" type="submit" name="operation" value="add">Add</button>

    </div>
    <div class="col-6 mb-1" id="details">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @for (var i = 0; i < Model.Products.Count; i++)
                {
                    <tr>
                        <td>
                            @Html.EditorFor(x => Model.Products[i].Name, new { @class = "form-control", type = "text" })
                            @Html.ValidationMessageFor(x => Model.Products[i].Name, "", new { @class = "text-danger" })
                        </td>
                        <td>
                            @Html.EditorFor(x => Model.Products[i].Price, new { @class = "form-control" })
                            @Html.ValidationMessageFor(x => Model.Products[i].Price, "", new { @class = "text-danger" })
                        </td>

                        <td>
                            <button formnovalidate class="btn btn-danger btn-sm" type="submit" name="operation" value="del_@i">Remove</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="form-group row mb-1 text-end">

        <div class="col-4 offset-2">
            <button type="submit" class="btn btn-primary" name="operation" value="insert">Save</button>
        </div>
    </div>
}
